#!/bin/sh

export PGHOST=192.168.30.66
export PGPORT=5432
export PGUSER=usr_bank
export PGPASSWORD=pwd_bank

case "$1" in
    "sys"|"src"|"ods"|"dws"|"dms"|"app|rpt")
	break
        ;;
    *)
	echo -e "\nusage: `basename $0`  <sys|src|ods|dws|dms|app|rpt>  \"<query_string>\"\n"
	exit 1
        ;;
esac

if [ "$2" = "" ]; then 
	psql db_$1 
else
	echo "$2" | psql db_$1
fi

exit 0

